{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",                                /* Specify what module code is generated. */
    "moduleResolution": "node",
    "rootDir": "./src",                                  /* Specify the root folder within your source files. */
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
